@model Cerveja.Models.ViewModels.PedidoFormViewModel

@{
    ViewData["Entidade"] = "Pedido";
    ViewData["Title"] = "Criar Novo";
}
<h1>@ViewData["Entidade"]</h1>
<h2>@ViewData["Title"]</h2>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create"> <!--Método POST-->

            <div class="form-group">
                <label class="control-label">Vendedor</label>
                <select asp-for="Pedido.Vendedor.Id" asp-items="@(new SelectList(Model.Vendedor,"Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Pedido.Valor" class="control-label"></label>
                <input asp-for="Pedido.Valor" class="form-control" />
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Rótulos
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Rotulos)
                {
                    <input type="hidden" asp-for="@item.Id" />
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>

                        <!-- Botões -->
                        <td>
                            <a asp-action="AddRotulo" asp-route-id="@item.Id">Adicionar</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

            <!-- Botões -->
            <div class="form-text">
                <input type="submit" value="Criar" class="btn btn-primary" /> |
                <a asp-action="Index">Voltar</a>
            </div>
        </form>
    </div>
</div>